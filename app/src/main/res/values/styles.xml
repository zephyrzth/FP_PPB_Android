        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#757373</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="password">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#757373</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!--
